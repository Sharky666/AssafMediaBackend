{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ],
          "@config/*": ["config/*"],
          "@interfaces/*": ["src/interfaces/*"],
          "@services/*": ["src/services/*"],
          "@DAOs/*": ["src/DAOs/*"]
      }
  },
  "include": [
      "src/**/*"
  ]
}